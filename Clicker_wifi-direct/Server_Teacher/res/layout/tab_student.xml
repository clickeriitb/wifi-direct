<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp" >

        <TextView
            android:id="@+id/textView_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.67"
            android:text="STUDENT WISE REPORT"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button_bk_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.47"
            android:textSize="8dip"
            android:text="Back" />

    </LinearLayout>
    
    
    
          
    <TabHost
        android:id="@+id/tabhost_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.47" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <HorizontalScrollView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:fillViewport="true"
                          android:scrollbars="none" >

                     <TabWidget
                         android:id="@android:id/tabs"
                         android:layout_width="1025dp"
                         android:layout_height="40dp"
                         android:background="#000000"
                         android:gravity="top" />
            
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/lh"
                android:layout_width="match_parent"
                android:layout_height="388dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" 
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:fadeScrollbars="false"
                        android:scrollbars="vertical" >

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="wrap_content"
                            android:layout_height="376dp" >

                            <LinearLayout
                                android:id="@+id/layout_stud"
                                android:layout_width="343dp"
                                android:layout_height="774dp"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </FrameLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                     <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="horizontal" 
                        android:fadeScrollbars="false"
                        android:scrollbarAlwaysDrawHorizontalTrack="true">
                        
                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="wrap_content"
                            android:layout_height="376dp" >

                            <LinearLayout
                                android:id="@+id/layout_student"
                                android:layout_width="1141dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >
                            </LinearLayout>
                        </FrameLayout>
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>

         </LinearLayout>
      </TabHost>
  </LinearLayout>
              
             


























