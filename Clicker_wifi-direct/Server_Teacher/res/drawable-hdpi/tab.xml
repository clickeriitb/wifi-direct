<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
  <!-- pressed -->
  <item android:state_pressed="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="10dp" />
      <gradient android:startColor="#56A5EC" android:endColor="#5CB3FF" android:angle="270" />
      <corners android:radius="10dp" />
    </shape>
  </item>
 
  <!-- focused -->
  <item android:state_focused="true" >
    <shape>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="10dp" />
      <gradient android:startColor="#3787ff" android:endColor="#571B7e" android:angle="270" />
      <corners android:radius="10dp" />
    </shape>
  </item>
 
  <!-- default -->
  <item>
    <shape>
      <solid android:color="#fff"/>
      <stroke android:width="1px" android:color="#444" />
      <corners android:radius="10dp" />
      <gradient android:startColor="#306EFF" android:endColor="#62A0FF" android:angle="270" />
      <corners android:radius="10dp" />
    </shape>
  </item>
</selector>